<Window x:Class="Tas25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tas25"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel
            Width="312"
            Height="399"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Background="PeachPuff"
            Opacity="0.45"
            >
            <Button x:Name="BTLoadDoc"
                    Click="BTLoadDoc_Click"
                    Background="Pink"
                    Width="150"
                    Height="55"
                    VerticalAlignment="Top"
                    Content="Загрузить документ"></Button>
            <Button x:Name="BTCancelDoc"
                    Click="BTCancelDoc_Click"
                    Margin="55"
                    Background="Pink"
                    Width="150"
                    Height="55"
                    Content="Закрыть документ"
                    />
        </StackPanel>
    </Grid>
</Window>
